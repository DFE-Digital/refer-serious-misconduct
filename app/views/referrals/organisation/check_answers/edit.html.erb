<% content_for :page_title, "Check and confirm your answers - Your organisation" %>
<% content_for :back_link_url, return_to_session_or(polymorphic_path([:edit, current_referral.routing_scope, current_referral])) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @organisation_form, url: referral_organisation_check_answers_path(current_referral), method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-l">
        <span class="govuk-caption-l">Your organisation</span>
        Check and confirm your answers
      </h1>

      <%= render partial: 'referrals/shared/check_answers', locals: { f:, complete_field_name: :complete } %>
    <% end %>
  </div>
</div>
