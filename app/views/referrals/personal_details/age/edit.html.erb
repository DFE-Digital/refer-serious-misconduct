<% content_for :page_title, "#{'Error: ' if @personal_details_age_form.errors.any?}Do you know their date of birth? - Personal details" %>
<% content_for :back_link_url, polymorphic_path([:edit, current_referral.routing_scope, current_referral, :personal_details_name]) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <%= form_with model: @personal_details_age_form, url: [current_referral.routing_scope, current_referral, :personal_details_age], method: :put do |f| %>
      <%= f.govuk_error_summary %>

      <span class="govuk-caption-l">Personal details</span>
      <div class="govuk-form-group">
        <%= f.govuk_radio_buttons_fieldset(:age_known, legend: { size: "l", text: "Do you know their date of birth?" }) do %>
          <%= f.govuk_radio_button :age_known, "true", label: { text: "Yes" }, link_errors: true do %>
            <%= f.govuk_date_field :date_of_birth,
                date_of_birth: true,
                legend: { text: "Date of birth", size: "s" },
                hint: { text: "For example, 27 3 1987" } %>
          <% end %>
          <%= f.govuk_radio_button :age_known, "false", label: { text: "No" } %>
        <% end %>
      </div>
      <%= f.govuk_submit "Save and continue" %>
    <% end %>
  </div>
</div>
