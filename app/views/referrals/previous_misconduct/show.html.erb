<% content_for :page_title, "Check and confirm your answers" %>
<% content_for :back_link_url, return_to_session_or(polymorphic_path([:edit, current_referral.routing_scope, current_referral])) %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <span class="govuk-caption-l">Previous allegations</span>
      Check and confirm your answers
    </h1>

    <%= render PreviousMisconductComponent.new(referral: current_referral) %>

    <%= form_with model: @previous_misconduct_form, url: referral_previous_misconduct_path(current_referral), method: :patch do |f| %>
      <%= f.govuk_radio_buttons_fieldset :previous_misconduct_complete, hint: { text: 'You can still make changes to a completed section' }, legend: { size: 'm', text: 'Have you completed this section?' } do %>
        <%= f.hidden_field :previous_misconduct_complete %>
        <%= f.govuk_radio_button :previous_misconduct_complete, true, label: { text: "Yes, I’ve completed this section" }, link_errors: true %>
        <%= f.govuk_radio_button :previous_misconduct_complete, false, label: { text: "No, I’ll come back to it later" } %>
      <% end %>
      <%= f.govuk_submit "Save and continue" %>
    <% end %>
  </div>
</div>
