<% content_for :page_title, "#{'Error: ' if @referrer_name_form.errors.any?}Your name" %>
<% content_for :back_link_url, return_to_session_or(edit_referral_path(current_referral)) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @referrer_name_form, url: update_path, method: :patch do |f| %>
      <%= f.govuk_error_summary %>
      <%= f.govuk_text_field :name, caption: { size: 'l', text: 'Your details' }, label: { size: 'l', text: "Your name" } %>
      <%= f.govuk_submit 'Save and continue' %>
    <% end %>
  </div>
</div>
