<% content_for :back_link_url, support_interface_staff_index_path %>

<h1 class="govuk-heading-l"><%= t "devise.invitations.new.header" %></h1>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_text_field :email, autocomplete: "email", label: { text: "Email address", size: "m" } %>

      <div class="govuk-form-group">
        <%= f.govuk_fieldset legend: { text: "Permissions", size: "m" } do %>
          <%= f.govuk_check_box :view_support, 1, multiple: false,  label: { text: "View support" } %>
          <%= f.govuk_check_box :manage_referrals, 1, multiple: false, label: { text: "Manage referrals" } %>
          <%= f.govuk_check_box :feedback_notification, 1, multiple: false, label: { text: "Feedback notification" }, hint: { text: "Receive an email notification when new feedback is available" } %>
        <% end %>
      </div>

      <%= f.govuk_submit t("devise.invitations.new.submit_button") %>
    <% end %>
  </div>
</div>
