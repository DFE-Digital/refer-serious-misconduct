{
  "name": "app",
  "private": "true",
  "dependencies": {
    "esbuild": "^0.18.3",
    "govuk-frontend": "4.6.0",
    "sass": "^1.63.6",
    "puppeteer": "20.0.0"
  },
  "scripts": {
    "build:css": "sass ./app/assets/stylesheets/main.scss:./app/assets/builds/main.css --no-source-map --load-path=node_modules --quiet-deps",
